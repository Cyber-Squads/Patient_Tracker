@model PatientTracker.Models.MedicalTestDL

@{
    ViewBag.Title = "PatientRaiseTest";
}
<style>
    body {
        background-color: lightskyblue;
    }
    #xyz{
        float:right;
        color:red;
    }
</style>
<h2>PatientRaiseTest</h2>
<div id="xyz">
    <p>* Please select Doctor Type Other for Lab tests</p>
    

</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal table-striped">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.TestType, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.TestType, new List<SelectListItem> {
       new SelectListItem{Text="Blood Test",Value="Blood Test"},
       new SelectListItem{Text="Urine Test",Value="Urine Test"},
       new SelectListItem{Text="Covid Test",Value="Covid Test"},
       new SelectListItem{Text="ENT Test",Value="ENT Test"},
       new SelectListItem{Text="MRI SCAN",Value="MRI SCAN"},
       new SelectListItem{Text="HIV Test",Value="HIV Test"},
       new SelectListItem{Text="CT SCAN",Value="CT SCAN"},
       new SelectListItem{Text="X-RAY",Value="X-RAY"},
       new SelectListItem{Text="Other",Value="Other"},


       }, "select"


           , new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TestType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DoctorType, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.DoctorType, new List<SelectListItem> {
       new SelectListItem{Text="ENT specialist",Value="ENT specialist"},
       new SelectListItem{Text="Gynaecologist",Value="Gynaecologist"},
       new SelectListItem{Text="Dentist",Value="Dentist"},
       new SelectListItem{Text="Psychiatrists",Value="Psychiatrists"},
       new SelectListItem{Text="Orthopaedic surgeon",Value="Orthopaedic surgeon"},
       new SelectListItem{Text="Cardiothoracic surgeon",Value="Cardiothoracic surgeon"},
       new SelectListItem{Text="Neurologist",Value="Neurologist"},
       new SelectListItem{Text="Paediatrician",Value="Paediatrician"},
       new SelectListItem {Text="Primary Care Physician",Value="Primary Care Physician"},
       new SelectListItem{Text="Other",Value="Other"},


       }, "select"


           , new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DoctorType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DateOfTestAppointment, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DateOfTestAppointment, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DateOfTestAppointment, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TestRequest, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.TestRequest, new List<SelectListItem> {
       new SelectListItem{Text="Yes",Value="Yes"},
        new SelectListItem{Text="No",Value="No"},

       }, "Select"

           , new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TestRequest, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TestDescription, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TestDescription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TestDescription, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Raise Test Request" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div>
    <b class="text-danger">@ViewBag.Message</b>
    <b>@ViewBag.king</b>
</div>
<div>
    @Html.ActionLink("Back to List", "PatientHome")
</div>
