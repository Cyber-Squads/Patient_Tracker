@model IEnumerable<PatientTracker.Models.DoctorDL>
@using PagedList;
@using PagedList.Mvc;
@*@model IPagedList<PatientTracker.Models.DoctorDL>*@


@{
    ViewBag.Title = "AdminDoctorInfo";
}
<style>
    body {
        background-color: lightskyblue;
    }

    #xyz {
        float: right;
    }

    #d {
        float: right;
        margin-right:100px;
    }
</style>
<h2>Admin Doctor Info</h2>

<b>

    @Html.ActionLink("Create New", "DoctorRegister", "Doctor")
</b>
<div id="xyz">
    <b>Welcome @ViewBag.Welcome</b>
</div>
<br />
<div id="d">
    @using (Html.BeginForm(FormMethod.Post))
    {
        <table>
            <tr>
                <td>@Html.Label("Search By Doctor FirstName:")</td>
                <td>@Html.TextBox("Search")</td>
                <td></td>
                <td><button type="submit" name="Search" value="Search">Search</button></td>
            </tr>
        </table>
    }
</div>
<br />
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().DoctorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ContactNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DoctorStatus)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorStatus)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditDoctor", new { id = item.DoctorId }) |
                @Html.ActionLink("Details", "DoctorDetails", new { id = item.DoctorId }) |
                @Html.ActionLink("Delete", "DeleteDoctor", new { id = item.DoctorId })
            </td>
        </tr>

    }


</table>

